---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const services: Array<FeatureItem> = [
  {
    title: "Powerful Web Apps",
    description:
      "Flexible, lightning fast web apps to power your business, built on technologies best suited for you.",
    icon: "mdi:handshake",
  },
  {
    title: "API Integration and Development",
    description: "Remove complexity and focus on what you need.",
    icon: "mdi:feather",
  },
  {
    title: "Payments",
    description:
      "Integrations of services such as Stripe and custom-built solutions.",
    icon: "mdi:directions-fork",
  },
  {
    title: "Analytics",
    description:
      "Analytics and admin panels for products that manage HR and Inventory.",
    icon: "mdi:graph",
  },
  {
    title: "End-to-End Ecommerce Solutions",
    description:
      "Inventory, Delivery, Payments. Get everything you need to launch your business and reach customers.",
    icon: "mdi:search-web",
  },
  {
    title: "Landing Page",
    description: "Design and development of beautiful and functional websites.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Services" id="services">
  <Fragment slot="lead">Experience, quality and innovation.</Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
